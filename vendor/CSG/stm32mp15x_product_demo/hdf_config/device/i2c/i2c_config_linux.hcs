root {
    platform {
        i2c_config {
            match_attr = "linux_i2c_adapter";

            template i2c_controller {
                bus = 0;
            }


            controller_0x40012000 :: i2c_controller {
                bus = 1;
            }
            controller_0x40013000 :: i2c_controller {
                bus = 2;
            }
            controller_0x40014000 :: i2c_controller {
                bus = 3;
            }
            controller_0x5c002000 :: i2c_controller {
                bus = 4;
            }
            controller_0x40015000 :: i2c_controller {
                bus = 5;
            }
            controller_0x5c009000 :: i2c_controller {
                bus = 6;
            }

        }
    }
}
